@using TesteCNPQ.Models;

@model Local

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar Local</h1>
<hr class="col-md-4" />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Endereço" class="control-label" style=" margin-top: 10px"></label>
                <input asp-for="Endereço" class="form-control" />
                <span asp-validation-for="Endereço" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CapacidadeMax" class="control-label" style=" margin-top: 10px"></label>
                <input asp-for="CapacidadeMax" class="form-control" />
                <span asp-validation-for="CapacidadeMax" class="text-danger"></span>
            </div>
            <div style=" margin-top: 20px" class="row col-md-12">
                <div class="row col-md-3">
                    <div>
                        <input type="submit" value="Salvar" class="btn btn-dark" />
                    </div>
                </div>
                <div class="row col-md-5">
                    <div>
                        <a href="@Url.Action("Index", "Home")" class="btn btn-dark">Voltar à Lista</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
